<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<title><%= @title %></title>
	<meta name="description" content="">
	<meta name="author" content="">

	<meta name="viewport" content="width=device-width,initial-scale=1">

	<link rel="stylesheet" href="style.css">
</head>
<body scroll="auto">
	<div id="header-container">
		<header class="wrapper">
			<img src="wl.png" height="80" style="float: left; margin-top: 15px;"/><h1 id="title"><%= @title %></h1>
		</header>
	</div>
	<div id="main" class="wrapper">
		<% @items.each do |item| %>
			<article>
				<h2><%= item[:title] %></h2>
				<% if @details %> <%= item[:description] %> <% end %>
			</article>
		<% end %>
	</div>
	<div id="footer-container">
		<footer class="wrapper">
				<div style="float: left;"><h4>Generated at <%= Time.now.strftime("%m/%d/%Y at %I:%M%p") %> </h4></div>
				<div style="float: right; text-align: right"><h4>Generated by Brad's RSS-o-matic!</h4></div>
		</footer>
	</div>

</body>
</html>
